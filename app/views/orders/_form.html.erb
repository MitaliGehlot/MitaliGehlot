<h1>place order</h1>

<%= form_with model: [@product, @order] do |form| %>

   <div>
    <%= form.label :address %><br>
    <%= form.text_field :address %>
  </div>


  <div>
    <%= form.label :phone_no %><br>
    <%= form.text_field :phone_no %>
  </div>
   <div>
    <%= form.label :payment_type %><br>
    <%= form.text_field :payment_type %>
  </div>

  <div>
    <%= form.label :amount %><br>
    Rs. <%= @product.price %>
   
  </div>


  <div>
   <%= form.submit %>
  </div>
<% end %>
